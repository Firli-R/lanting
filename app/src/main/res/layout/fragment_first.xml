<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.getting.first.FirstFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:shadowColor="@color/green_dark"
        android:shadowDx="10"
        android:shadowDy="7"
        android:shadowRadius="10"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/green_dark"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/img_mother"
        app:layout_constraintEnd_toEndOf="@id/img_mother"
        app:layout_constraintStart_toStartOf="@id/img_mother"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_mother"
        android:layout_width="300dp"
        android:layout_height="375dp"
        android:src="@drawable/img_mother_child"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="24dp"
        android:text="@string/join_us"
        android:textColor="@color/green_dark"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/img_mother"
        app:layout_constraintStart_toStartOf="@id/img_mother"
        app:layout_constraintTop_toBottomOf="@id/img_mother" />

</androidx.constraintlayout.widget.ConstraintLayout>