<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lanting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/brown_dark</item>
        <item name="colorOnSecondary">@color/cream</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:targetApi="o">@font/poppins</item>
    </style>

    <style name="Theme.Lanting.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/green_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Lanting.ButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="android:textColor">@color/cream</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Lanting.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Lanting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Lanting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>